!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = display_meta_tags :site => 'HYBRID MATTERs invitations', og: {image: "http://#{request.host}#{image_path('hm_logo.png')}" }
    = stylesheet_link_tag    'application', media: 'all'
    = stylesheet_link_tag    'invitations', media: 'all'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true 
    - if controller.controller_name == 'partners'
      %script{:src => "https://maps.googleapis.com/maps/api/js?key=#{Figaro.env.google_maps_api_key}", :type => "text/javascript"}
    = csrf_meta_tags
    %link{:href => "/posts.rss", :rel => "alternate", :title => "RSS", :type => "application/rss+xml"}/
    %link{:href => "http://fonts.googleapis.com/css?family=Roboto:400italic,300,300italic,400", :rel => "stylesheet", :type => "text/css"}/
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-60278881-1', 'auto');
      ga('send', 'pageview');
  %body
    - unless flash.empty?
      #flash
        .row.expanded
          .small-12.columns.text-center
            - flash.each do |name, msg|
              - if msg.is_a?(String)
                = content_tag :div, msg, :id => "flash_#{name}"
    - unless @background_image.nil?
      :css
        header{
          background: url(#{@background_image.regular.url}) no-repeat top center;
        }
        @media only screen and (max-width: 40em)  { 
          header {
            background: url(#{@background_image.mobile .url}) no-repeat top center;
          }
        }
        
    %header.invitations{class: @background_image.nil? ? "type" + [1,2,3].sample.to_s : false }
      - unless @background_image.nil?
        - unless @background_image.credit.blank?
          .image_credit= link_to 'IMAGE CREDITS', '#', onclick: "$(this).text('#{escape_javascript(@background_image.credit)}');return false;"
      - if user_signed_in?  
        - if current_user.has_role?(:partner) || current_user.has_role?(:admin)
          .right
            = link_to 'Back office', '/admin', class: [:button, :tiny]
      = link_to 'http://hybridmatters.net/' do
        - if Rails.env.staging?
          .staging_overlay= image_tag('staging_overlay.png')
        .before
        .grid-container

      %nav.top-bar.sticky
        .hor-container
          .row.expanded
      
            .menu_wrapper
              .social.hide-for-small-only
                = link_to image_tag('icon_fb.png', onmouseover: "this.src='#{image_path('icon_fb_hover.png')}'", onmouseout: "this.src='#{image_path('icon_fb.png')}'"), 'https://www.facebook.com/groups/437255773056631/', target: :_blank, class: :facebook_link
                = link_to image_tag('icon_twitter.png', onmouseover: "this.src='#{image_path('icon_twitter_hover.png')}'", onmouseout: "this.src='#{image_path('icon_twitter.png')}'"), 'http://twitter.com/hybridmatters', target: :_blank, class: :twitter_link
                = link_to image_tag('icon_post.png', onmouseover: "this.src='#{image_path('icon_post_hover.png')}'", onmouseout: "this.src='#{image_path('icon_post.png')}'"), 'mailto:info@bioartsociety.fi', class: :maillink
              .rest
                .row.expanded.show-for-small-only
                  .small-6.columns.small-offset-1
                    %select.main_nav_select
                      %option{ value: 'www'} Home
                      %option{value: 'fieldnotes'} Field_Notes
                      %option{selected: :selected, value: 'invitations'} Invitations
                  .small-5.columns
                    %select.secondary_nav_select
                      %option{selected: (controller.controller_name == 'pages' && params[:id] == 'about-invitations' ? :selected : false), value: page_path('about-invitations') } About
                      %option{selected: (controller.controller_name == 'posts' ? :selected : false), value: posts_path } Blog
                      %option{selected: (controller.controller_name == 'events' ? :selected : false), value: events_path} Events
                      %option{selected: (controller.controller_name == 'pages' && params[:id] == 'speculations'  ? :selected : false), value: "pages/speculations"} Speculations              
                %ul.top-bar-menu.hide-for-small-only.horizontal.menu
                  %li.about{class: controller.controller_name == 'pages' && params[:id] == 'about-invitations' ? :active : false}= link_to 'About', page_path('about-invitations')
                  = render partial: 'layouts/dropdown'
                  %li{class: controller.controller_name == 'posts' ? :active : false}= link_to 'Blog', posts_path
                  %li{class: controller.controller_name == 'events' ? :active : false}= link_to 'Events', events_path
                  %li{class: controller.controller_name == 'pages' && params[:id] == 'speculations' ? :active : false}= link_to 'Speculations', "/pages/speculations"
          .row.expanded.hide-for-small-only
            .down_arrow_wrapper
              .social &nbsp;
              .rest
                %ul.top-bar-menu
                  .together{class: controller.controller_name == 'pages' && params[:id] == 'about-invitations' ? :active : false}
                    %li.about
                      %span About
                    %li.select_menu
                      %span
                        &nbsp;&nbsp;&nbsp;
                        %strong
                          KUNSTHALL GRENLAND
                  %li{class: controller.controller_name == 'posts' ? :active : false}
                    %span Blog
                  %li{class: controller.controller_name == 'events' ? :active : false}
                    %span Events
                  %li{class: controller.controller_name == 'pages' && params[:id] == 'speculations' ? :active : false}
                    %span Speculations
      
                
    .invitations_box.show-for-small-only
      .row.expanded
        .small-10.columns.text-center.small-centered.small-offset-1
          Citizen art&science activities in different Nordic countries by researchers from Malmö University
    .main-container.invitations

            
      = yield

      #sticky_invitations_box.hide-for-small-only
        .heading.ui-draggable-handle
          .float-left.text-left PROGRAMME
          .text-right 2015
        .title_box.text-center
          .title= link_to 'HYBRID MATTERs Invitations', '/'
            
        .blurb.text-center
          Citizen art&science activities in different Nordic countries by researchers from Malmö University
            
      = content_for :jquery do
        :plain  
          $('#sticky_invitations_box').dialog({draggable: false, resizable: false, position: { my: "right-40 bottom", at: "right bottom-40", of: '.hor-container'}}).parent().draggable();
          $('.ui-dialog').draggable( "option", "containment", 'html');
          


    = render partial: 'layouts/footer', locals: {append: '_invitations'}
                     
    :javascript
      $(document).ready(function() { #{yield :jquery}

      });