.featured_projects
  .row
    .small-10.small-centered.medium-12.columns.section_title
      %span.featured Featured
      Projects
      
  .row
    .small-10.columns.medium-11.small-centered
      - @projects.each do |project|
        - next if project.slug == 'ars-bioarctica'
        .row.project[project]
          .small-12.medium-2.project_icon.columns
            = image_tag project.image.url(:box)
          .small-12.medium-10.project_content.columns
            .title= project.name
            .years= project.year_range
            .description= project.description