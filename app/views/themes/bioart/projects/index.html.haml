.projects_index
  - unless @ongoing.empty?
    .row
      .small-10.small-centered.medium-12.columns
        .heading
          %span.featured Ongoing
          Projects
          
    - @ongoing.each do |project|
      - next if project.slug == 'ars-bioarctica'
      = link_to project, class: [:project] do
        .row[project]
          .small-12.columns
            .row.inner
              .small-12.large-2.hide-for-medium-only.project_icon.columns
                = image_tag project.image.url(:box).gsub(/development/, 'production')
              .small-12.medium-12.large-10.project_content.columns
                .title= project.name
                .years= project.year_range
                .description= project.description

  - unless @old.empty?
    .row
      .small-10.small-centered.medium-12.columns
        .heading
          Past
          Projects
    .row.projects_container
      .small-12.columns
        - @old.each do |project|
          .row
            = link_to project, class: [:columns, 'small-12', :project] do
              .row.inner
                .small-12.large-2.hide-for-medium-only.project_icon.columns
                  = image_tag project.image.url(:box).gsub(/development/, 'production')
                .small-12.medium-12.large-10.project_content.columns
                  .title= project.name
                  .years= project.year_range
                  .description= project.description