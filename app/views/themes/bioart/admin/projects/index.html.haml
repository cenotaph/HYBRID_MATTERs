%h1 Projects

%table
  %thead
    %tr
      %th Node
      %th Name
      %th Years
      %th Icon
      %th Published
      %th
      %th
      %th

  %tbody
    - @projects.each do |project|
      %tr
        %td= project.node.try(:name)
        %td= project.name
        %td= project.year_range
        %td
          - if project.image?
            = image_tag project.image.url(:thumb)
        %td= project.published == true ? 'yes' : 'no'

        %td= link_to 'Edit', edit_admin_project_path(project), class: [:button, :tiny]
        %td= link_to 'Destroy', [:admin, project], :method => :delete, :data => { :confirm => 'Are you sure?' }, class: [:button, :tiny, :alert]

%br

= link_to 'New Project', new_admin_project_path, class: [:button, :tiny]
