.row
  .small-12.columns
    %h1 Users

    %table
      %thead
        %tr
          %th= sortable_column "Name", column: :name
          %th Partner
          %th Roles
          %th Actions

      %tbody
        - @users.each do |user|
          %tr
            %td= [user.name, user.email].join('/')
            %td= user.partner.try(:name)
            %td
              = user.roles.map(&:name).join(', ')
            %td{colspan: 3}
              = link_to 'Show', user, class: [:button, :small]
              = link_to 'Edit', edit_admin_user_path(user), class: [:button, :small]
              = link_to 'Destroy',[:admin, user], :method => :delete, :data => { :confirm => 'Are you sure?' }, class: [:button, :small, :alert]
