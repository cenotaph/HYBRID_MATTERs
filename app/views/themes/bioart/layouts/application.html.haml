!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    = display_meta_tags :site => 'the Bioart Society', og: {image: "http://#{request.host}#{image_path('/assets/bioart/images/logo.png')}" }
    = stylesheet_link_tag 'bioart/stylesheets/application', media: 'all'
    = javascript_include_tag 'bioart/javascripts/application', 'data-turbolinks-track' => true 
    -# if controller.controller_name == 'partners'
    -#  %script{:src => "https://maps.googleapis.com/maps/api/js?key=#{Figaro.env.google_maps_api_key}", :type => "text/javascript"}
    = csrf_meta_tags
    %link{:href => "/posts.rss", :rel => "alternate", :title => "RSS", :type => "application/rss+xml"}/
    %link{:href => "https://fonts.googleapis.com/css?family=Rubik|Titillium+Web|Abel", :rel => "stylesheet", :type => "text/css"}/

    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-60278881-1', 'auto');
      ga('send', 'pageview');
  %body
    %header
      .pattern
        .row
          = link_to '/' do
            .logo.medium-2.columns.small-12
              BIOART
              SOCIETY
          .title-bar.medium-8.columns.small-12
            .title-bar-left
              %ul.horizontal.menu
                %li= link_to 'News', posts_path
                %li= link_to 'About', '/about'
                %li= link_to 'ARS Bioarctica', page_path('ars-bioarctica')
                %li= link_to 'Projects', '#'
                %li= link_to 'Contact', page_path('contact')
    = yield
    %footer
      stuff to go here
    :javascript
      $(document).ready(function() { #{yield :jquery}  });