#mapcontainer

= content_for :jquery do
  :plain

    function initialize() {
      var myLatlng = new google.maps.LatLng(#{place.to_coordinates.first}, #{place.to_coordinates.last});
      var myOptions = { zoom: 14, 
            center: myLatlng,
            mapTypeId: google.maps.MapTypeId.ROADMAP
         }


      map = new google.maps.Map(document.getElementById('mapcontainer'), myOptions);
      var marker = new google.maps.Marker({  position: myLatlng, map: map, 
        title: '#{escape_javascript(place.name)}', 
        map: map
      });
      return map;
    }
    //map = initialize();
    map = google.maps.event.addDomListener(window, 'load', initialize);