.row
  .large-10.columns.large-offset-1
    %h1= @post.title
- unless @post.photos.empty?
  .row
    .large-10.columns.large-offset-1.image_carousel
      - @post.photos.each do |i|
        .slide= image_tag i.image.url
.row
  .large-10.columns.large-offset-1
    = raw @post.body

- if can? :edit, @post
  .row
    .small-12.columns= link_to 'Edit post', edit_admin_post_path(@post), class: [:button, :tiny, :secondary]
    
- if @post.photos.size > 1
  = content_for :jquery do
    :plain
      $('.image_carousel').slick({infinite: true,
        arrows: false,
        slide: '.slide',
        variableWidth: false,
        autoplay: true,
        autoplaySpeed: 2400,
        slidesToScroll: 1,
      });