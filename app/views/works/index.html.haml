.works_container
  - @works.each_with_index do |work, index|
    .work{class: index == (@works.size - 1) ? :last : false}
      .row
        .medium-3.columns.medium-offset-1.text-left
          - unless work.photos.empty?
            = image_tag work.photos.first.image.url
        .medium-7.columns.work_info.end
          - unless @activity || work.activities.empty?
            .activity= raw work.activity_list
          .name= link_to work.title, work
          .artist= raw work.artist_names
          .description
            = raw truncate_html(work.description, length: 600)
            %p= link_to "Read more....", work.activities.size == 1 ? "/#{work.activities.first.url_name}/works/#{work.slug}" : work

      